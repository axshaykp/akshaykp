---
const { url, title } = Astro.props;
---

<a target="_blank" referrerpolicy="no-referrer" href={url}>
  <span
    class="inline-flex items-center justify-center gap-0 rounded-full pl-3 pr-2 py-1 text-sm leading-6 text-black ring-1 ring-zinc-200 bg-white ring-inset cursor-pointer"
  >
    <p class="font-semibold">{title}</p>
    <svg
      class="h-[20px] rotate-45"
      fill="#000000"
      width="20px"
      height="20px"
      viewBox="0 0 32 32"
      xmlns="http://www.w3.org/2000/svg"
      ><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
        id="SVGRepo_tracerCarrier"
        stroke-linecap="round"
        stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"
        ><path
          d="M17.504 26.025l.001-14.287 6.366 6.367L26 15.979 15.997 5.975 6 15.971 8.129 18.1l6.366-6.368v14.291z"
        ></path></g
      ></svg
    >
  </span>
</a>
